<!-- res/drawable/search_bar_bg.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The fill color for the background of the search bar -->
    <solid android:color="#1C1C1C" />

    <!-- Adjust the radius to get the desired roundness -->
    <corners android:radius="24dp" />

    <!-- Optional stroke if you want a border; remove if you don't need it

    -->
    <stroke
        android:width="1dp"
        android:color="#333333" />

    <!-- Optional padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
